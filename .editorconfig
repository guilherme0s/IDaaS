root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4
tab_width = 4

[go.mod]
indent_style = tab

[Makefile]
indent_style = tab
